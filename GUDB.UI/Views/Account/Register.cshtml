@model GUDB.Model.User
@{
    ViewBag.Title = "Register";
}




    <script>

        $(document).ready(function () {
            $("form").submit(function (e) {

                if ($("#ReName").val() == "" || $("#ReName").val() == null) {
                    alert("用户名不能为 空");

                    return false;
                }
                else {
                    if ($("#RePassWord").val() == "" || $("#RePassWord").val() == null) {
                        alert("密码不能为空");

                        return false;
                    }
                    else {
                        if ($("#comp ").val() == null || $("#comp").val() == "") {
                            alert("确认密码不能为空");

                            return false;
                        }
                    else {
                            if ($("#comp   ").val() != $("#RePassWord").val())
                            {
                                alert("密码不一致");

                                return false;
                            }

                            else {
                                console.log($("#name").val() + "登录");
                            }
                            //alert("用户"+$("#name").val()+"登录中………");
                            //alert("Submitted……");
                        }

                    }


                }

            });
        });


    </script>





<h2>注册</h2>
<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            @using (Html.BeginForm("Register", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()



                <hr />
                //@Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.ValidationMessageFor(m => m.UName, null, new { @style = "color:red" })

                    @Html.Label("用户名", new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.UName, new { @class = "form-control", @id = "ReName" })
                    </div>
                    <br />
                </div>

                <br />



                <div class="form-group">

                    @Html.ValidationMessageFor(m => m.UPassword, null, new { @style = "color:red" })
                    @Html.Label("密码", new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.UPassword, new { @id = "RePassWord", @class = "form-control" })
                    </div>
                </div>
                <br />


                <div class="form-group">
                    @Html.ValidationMessageFor(m => m.UPassword, null, new { @style = "color:red" })

                    @Html.Label("确认密码", new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        <input type="password" class="form-control" name="com" id="comp"/>
                    </div>
                </div>
                <br />


                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-default" value="注册" />
                    </div>
                </div>
                <br />


            }

            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }

        </section>
    </div>
</div>

