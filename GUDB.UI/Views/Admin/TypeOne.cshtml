@model GUDB.Model.Type
@{
    Layout = null;
}


@*<h2>UserLook</h2>*@


<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="~/Scripts/bootstrap.js"></script>

@Styles.Render("~/bundles/Bootstarp/css")
@Styles.Render("~/bundles/Bootstarp/css")


<script>

    $(function () {
        $("#i1").hide();
        $("#i2").hide();
        $("#i3").hide();
        $("#i4").hide();
        $("#i5").hide();
        $("#i6").hide();

        $("#i8").hide();
        $("#i7").hide();

    }
    );
</script>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div>
        <div class="alert alert-success alert-dismissable">
            <button type="button" class="close" data-dismiss="alert"
                    aria-hidden="true">
                &times;
            </button>
            你正在查看调查 地质灾害类型 @Html.DisplayFor(model => model.TName) 信息
        </div>



        <hr />
        <table class="table table-hover">

            <tbody>


                <!--UID-->
                <tr>
                    <td>
                        地质灾害 代号

                    </td>



                    <td>

                        @Html.DisplayFor(model => model.TId)
                    </td>


                    @*<td><a href="~/Admin/Change?key=@Html.DisplayFor(model => model.UId) && type=UId ">修改信息</a></td>*@





                    <td>


                        <div class="col-lg-4">

                            @Html.EditorFor(model => model.TId, new { htmlAttributes = new { @class = "form-control", id = "i1" } })


                        </div>
                    </td>

                </tr>



                <!--UName-->
                <tr>
                    <td>

                        灾害类型名称
                    </td>

                    <td>

                        @Html.DisplayFor(model => model.TName)
                    </td>



                    @*<td><a href="~/Admin/Change?key=@Html.DisplayFor(model => model.UId) && type=UName ">修改信息</a></td>*@






                    <td>


                        <div class="col-lg-4">

                            @Html.EditorFor(model => model.TName, new { htmlAttributes = new { @class = "form-control", @id = "i2" } })



                        </div>
                    </td>
                </tr>



                <!--UP  a  s-->

                <tr>
                    <td>
                        灾害主要特点

                    </td>

                    <td>

                        @Html.DisplayFor(model => model.TCharact)
                    </td>






                    <td>


                        <div class="col-lg-4">

                            @Html.EditorFor(model => model.TCharact, new { htmlAttributes = new { @class = "form-control", @id = "i8" } })



                        </div>
                    </td>

                    @*<td><a href="~/Admin/Change?key=@Html.DisplayFor(model => model.UId) && type=UPhone ">修改信息</a></td>*@

                </tr>



                <!--UPhone-->

                <tr>
                    <td>
                        灾害主要引发原因

                    </td>

                    <td>

                        @Html.DisplayFor(model => model.TReason)
                    </td>






                    <td>


                        <div class="col-lg-4">

                            @Html.EditorFor(model => model.TReason, new { htmlAttributes = new { @class = "form-control", @id = "i3" } })



                        </div>
                    </td>

                    @*<td><a href="~/Admin/Change?key=@Html.DisplayFor(model => model.UId) && type=UPhone ">修改信息</a></td>*@

                </tr>




                <!--邮 箱-->
                <tr>
                    <td>
                        灾害发生后的 损失特点
                    </td>

                    <td>

                        @Html.DisplayFor(model => model.TDamageCharact)
                    </td>






                    <td>


                        <div class="col-lg-4">

                            @Html.EditorFor(model => model.TDamageCharact, new { htmlAttributes = new { @class = "form-control", @id = "i4" } })



                        </div>
                    </td>

                    @*<td><a href="~/Admin/Change?key=@Html.DisplayFor(model => model.UId) && type=UMail ">修改信息</a></td>*@

                </tr>



                <!--5.23-->
                <tr>
                    <td>
                        灾害等级描述
                    </td>

                    <td>

                        @Html.DisplayFor(model => model.TDamageLevelDec)
                    </td>


                    @*<td>
                        <a onclick="$(function () {
                         $('#i7').show();
                 } );" href="javascritp:void(0)">修改</a>
                    </td>*@



                    <td>


                        <div class="col-lg-4">

                            @Html.EditorFor(model => model.TDamageLevelDec, new { htmlAttributes = new { @class = "form-control", @id = "i7" } })



                        </div>
                    </td>

                    @*<td><a href="~/Admin/Change?key=@Html.DisplayFor(model => model.UId) && type=UMail ">修改信息</a></td>*@

                </tr>

            </tbody>
        </table>
    </div>

    <br />



    <div class="form-actions no-color">
        @Html.ActionLink("返回列表", "TypeList")
        |

        @Html.ActionLink("修改", "TypeChange",new { id = Model.TId })


    </div>


}

