@using GUDB.Model
@*@model IEnumerable<GUDB.Model.DamageBuilding>*@

@using PagedList.Mvc
@model PagedList.IPagedList<DamageBuilding>

@{
    ViewBag.Title = "EarthQuakeDamageBuilding";
}

<table class="table table-hover">
    <caption>
        <h4>@Html.DisplayFor(model => model.FirstOrDefault().Event.ELocation)   @Html.DisplayFor(model => model.FirstOrDefault().Event.ETime) 地震建筑损失</h4>
    </caption>


    <!--表头-->
    <thead>


        <tr>
            <th>建筑损失编码</th>
            <th>损失程度</th>
            <th>损失面积</th>
            <th>损失折算金额</th>
            <th>损失建筑产权人单位或个人姓名</th>
            <th>损失建筑产权人单位或个人联系电话</th>
            <th>其他说明</th>
            <th>调查人员</th>
            <th>调查单位</th>
        </tr>
    </thead>



    <tbody>






        @foreach (var item in Model)
        {
        <tr>
            <!--<th>建筑损失编码</th>-->
            <td>@item.DBId</td>
            <!-- <th>损失程度</th>-->
            <td>@item.DBLevel</td>
            <!--<th>损失面积</th>-->
            <td>@item.DBDamageSize</td>
            <!--<th>损失折算金额</th>-->
            <td>@item.DBDamageMoney</td>
           <!--<th>损失建筑产权人单位或个人姓名</th> -->
            <td>@item.DBDamageName</td>
<!--            <th>损失建筑产权人单位或个人联系电话</th>-->
            <td>@item.DBDamagePhone</td>
            <!--<th>其他说明</th>-->
            <td>@item.DBOtherDes</td>
            <!--<th>调查人员</th>-->
            <td>@item.Investigator.IName</td>
            <!--<th>调查单位</th>-->
            <td>@item.Investigator.Unit.UName</td>

        </tr>

        }

    </tbody>
</table>



<div>
    @*分页主要代码*@
    每页 @Model.PageSize 条记录，共 @Model.PageCount 页，当前第 @Model.PageNumber 页
    @Html.PagedListPager(Model, page => Url.Action("EarthQuakeDamageBuilding", new { page }))
</div>


